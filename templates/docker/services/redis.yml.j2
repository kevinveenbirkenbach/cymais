# This template needs to be included in docker-compose.yml, which depend on redis
  redis:
    image: redis:alpine
    container_name: {{application_id}}-redis
    restart: {{docker_restart_policy}}
    logging:
      driver: journald
    volumes:
      - redis:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 1s
      timeout: 3s
      retries: 30
    networks:
      - default
{{ "\n" }}